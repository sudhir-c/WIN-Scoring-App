<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_matchInformation">

    <fragment
        android:id="@+id/navigation_matchInformation"
        android:name="com.example.winscoringdemoapplication.ui.matchInformation.MatchInformationFragment"
        android:label="Match Information"
        tools:layout="@layout/fragment_match_information" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.winscoringdemoapplication.ui.home.HomeFragment"
        android:label="QR Code"
        tools:layout="@layout/fragment_qrcode" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.winscoringdemoapplication.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.winscoringdemoapplication.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

</navigation>